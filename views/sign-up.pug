extends layout 

block content 
  h1 Sign Up 

  form(action="" method="post")
    .form-section 
      label(for="fname") First Name
      input(type="text" name='fname' id='fname' required value=(user ? user.fname : ''))
    .form-section
      label(for="lname") Last Name
      input(type="text" name='lname' id='lname' required value=(user ? user.lname : ''))
    .form-section 
      label(for='username') Username 
      input(type="text" name='username' id='username' required value=(user ? user.username : ''))
    .form-section 
      label(for="password") Password 
      input(type='password' name='password' id='password' required value=(password || ''))
    .form-section 
      label(for='cpassword') Confirm Password 
      input(type='password' name='cpassword' id='cpassword' required value=(cpassword || '')) 
    .form-section 
      button(type="submit") Sign Up

  if errors 
    ul 
      each error in errors 
        li.error #{error.msg}